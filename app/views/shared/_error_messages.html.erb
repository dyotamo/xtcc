<% if model.errors.any? %>
  <div id="error_explanation">
    <p class="alert alert-danger"><%= pluralize(model.errors.count, "error") %> encontrados:</p>
    <ul class="text-danger">
      <% model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
