<% title "Todos os Pedidos de Partilha" %>
<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-condensed">
      <tbody>
        <% @requisitions.each do |requisition| %>
          <tr>
            <td><%= link_to requisition.url, requisition.url, target: "_blank" %></td>
            <td><%= link_to 'Wipe', requisition, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    <%= link_to 'New Requisition', new_requisition_path, class: "btn btn-primary btn-xs" %>
  </div>
</div>
