<% title "Bem-vindo" %>
<div class="jumbotron" style="text-align: center;">
  <h1>
    Silver mist suffused the deck of the ship.
  </h1>
  <p>
    Mist enveloped the ship three hours out from port.
  </p>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= render "shared/search", value: '' %>
  </div>
</div>
<hr/>
<div class="row">
  <div class="col-md-6">
    <h3>+ Recentes</h3>
    <ul>
      <% @monos.each do |mono| %>
        <li><%= link_to mono.title, mono_path(id: mono.id) %></li>
      <% end %>
      <li><%= link_to '...', monos_path %></li>
    </ul>
  </div>
  <div class="col-md-6">
    <h3>+ Populares</h3>
    <ul>
      <% @monos.order(:counter).reverse_order.each do |mono| %>
        <li><%= link_to "#{mono.title} (#{mono.counter})", mono_path(id: mono.id) %></li>
      <% end %>
      <li><%= link_to '...', monos_path(sort: :counter) %></li>
    </ul>
  </div>
</div>
