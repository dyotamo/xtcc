<div class="row">
    <div class="col-md-8">
        <%= render "shared/search", value: @args %>
        <% if @results.empty? %>
        <p>Resultados n√£o encontrados para <strong><%= @args %></strong></p>
        <% else %>
        <p>Resultados para <strong><%= @args %></strong> (<%= @results.count %>):</p>
        <hr />
        <% end %>
        <% @results.each do |mono| %>
        <div style="margin-bottom: 20px; box-shadow: 0 0.5px 2px 0;" class="panel panel-default">
            <div class="panel-body">
                <h4>
                    <%= link_to mono.title, mono_path(id: mono.slug) %>
                </h4>
                <div>
                    <% if !mono.abstract.empty? %>
                    <%= mono.abstract %>
                    <% else %>
                    (No description)
                    <% end %>
                </div>
            </div>
        </div>
        <% end %>
        <%= will_paginate @results, renderer: BootstrapPagination::Rails, page_links: false, previous_label: '<<', next_label: '>>' %>
    </div>
</div>