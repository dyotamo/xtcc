<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: mono, local: true, html: { multipart: true }) do |form| %>
      <%= render "shared/error_messages", model: mono %>
      <div class="field form-group">
        <%= form.label :title, 'Título' %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= form.label :year, 'Ano' %>
        <%= form.number_field :year, class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= form.label :author, 'Autor' %>
        <%= form.text_field :author, class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= form.label :college_id, 'Instituição' %>
        <%= form.select :college_id, College.all.collect {|c| [ c.name, c.id ] }, { include_blank: false}, {class: "form-control"} %>
      </div>
      <div class="field form-group">
        <%= form.label :course_id, 'Curso' %>
        <%= form.select :course_id, Course.all.collect {|c| [ c.name, c.id ] }, { include_blank: false}, {class: "form-control"} %>
      </div>
      <div class="field form-group">
        <%= form.label :abstract, 'Resumo' %>
        <%= form.text_area :abstract, class: "form-control" %>
      </div>
      <% if !mono.persisted? %>
        <div class="field form-group">
          <%= form.label :url, 'Link' %>
          <%= form.select :url, Requisition.all.collect {|r| [ r.url, r.url ] }, { include_blank: false}, {class: "form-control"} %>
        </div>
      <% end %>
      <div class="actions form-group">
        <%= form.submit 'Indexar', class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
