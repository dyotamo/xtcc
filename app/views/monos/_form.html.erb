<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: mono, local: true) do |form| %>
      <%= render "shared/error_messages", model: mono %>
      <div class="field form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= form.label :year %>
        <%= form.number_field :year, class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= form.label :author %>
        <%= form.text_field :author, class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= form.label :college_id %>
        <%= form.select :college_id, College.all.collect {|c| [ c.name, c.id ] }, { include_blank: false}, {class: "form-control"} %>
      </div>
      <div class="field form-group">
        <%= form.label :course_id %>
        <%= form.select :course_id, Course.all.collect {|c| [ c.name, c.id ] }, { include_blank: false}, {class: "form-control"} %>
      </div>
      <div class="field form-group">
        <%= form.label :abstract %>
        <%= form.text_area :abstract, class: "form-control" %>
      </div>
      <div class="actions form-group">
        <%= form.submit class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>
