<% title "Todos os TCCs" %>
<% if @monos.empty? %>
  <h3>0 Trabalhos cadastrados</h3>
<% end %>
<div class="panel panel-default">
  <% if current_user %>
    <div class="panel-heading">
      <%= link_to 'Novo Upload', new_mono_path, class: "btn btn-primary btn-xs" %>
    </div>
  <% end %>
  <div class="panel-body">
    <ul>
      <% @monos.each do |mono|%>
        <li><%= link_to mono.title, mono %></li>
      <% end %>
    </ul>
  </div>
  <div style="text-align: center;" class="panel-footer">
    <%= will_paginate @monos, renderer: BootstrapPagination::Rails %>
  </div>
</div>
