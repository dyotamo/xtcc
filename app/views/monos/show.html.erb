<% title @mono.title %>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <strong><%= @mono.title %></strong>
      </div>
      <div class="panel-body">
        <%= @mono.abstract %>
      </div>
      <div class="panel-footer">
        <small>
          Por <%= @mono.author %> - <%= @mono.year %>
        </small>
      </div>
    </div>
  </div>
</div>
<div>
  <%= link_to 'Editar', edit_mono_path(@mono), class: "btn btn-default btn-xs" if current_user %>
  <%= link_to 'Baixar', @mono.url , class: "btn btn-primary btn-xs", target: "_blank" %>
  <%= link_to 'Eliminar', @mono, method: :delete, data: { confirm: 'Eliminar de verdade?' }, class: "btn btn-danger btn-xs" if current_user %>
</div>
